
@using MVCPracticalExercise.Models
@model List<Quote>

<h2>Admin</h2>

<br /><br />

<div class="card">
    <div class="card-header">
        Insurance Quotes
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email Address</th>
                    <th scope="col">Quote</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var quote in Model)
                 {
                    <tr>
                        <td>@quote.FirstName</td>
                        <td>@quote.LastName</td>
                        <td>@quote.EmailAddress</td>
                        <td>@String.Format("{0:C}", quote.InsuranceQuote)</td>
                    </tr>
                 }
            </tbody>
        </table>
        <br /><br />
        <a href="/Home/Index">Back to index page</a>
    </div>
</div>
